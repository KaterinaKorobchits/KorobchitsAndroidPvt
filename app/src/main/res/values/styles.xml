<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dz3Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dz3Gray</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="dz3Number">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dz3Orange</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:layout_marginTop">-5dp</item>
    </style>

    <style name="dz3Value">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dz3White</item>
        <item name="android:fontFamily">@font/monda_bold</item>
    </style>

    <style name="dz1">
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="dz2EditText">
        <item name="android:background">@color/whiteTransparentBackground</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Dz6Label">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Dz6PropertyValue">
        <item name="android:textColor">@color/dz6ItemBackground</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dz6Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
