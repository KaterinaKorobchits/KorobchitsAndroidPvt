<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainActivityBackground">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center">
        <TextView android:id="@+id/austriaText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="@style/dz1"/>
        <LinearLayout android:id="@+id/austria"
                      android:layout_width="300dp"
                      android:layout_height="200dp"
                      android:background="@color/red"
                      android:layout_marginBottom="20dp"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:weightSum="3">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:background="@android:color/white"
                          android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:id="@+id/polandText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="@style/dz1"/>
        <LinearLayout android:id="@+id/poland"
                      android:layout_width="300dp"
                      android:layout_height="200dp"
                      android:background="@color/red"
                      android:layout_marginBottom="20dp"
                      android:orientation="vertical"
                      android:weightSum="2">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:background="@android:color/white"
                          android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:id="@+id/italyText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="@style/dz1"/>
        <LinearLayout android:id="@+id/italy"
                      android:layout_width="300dp"
                      android:layout_height="200dp"
                      android:background="@color/redItalyFlag"
                      android:baselineAligned="false"
                      android:layout_marginBottom="20dp"
                      android:orientation="horizontal"
                      android:weightSum="3">
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:background="@color/greenItalyFlag"
                          android:layout_weight="1"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:background="@android:color/white"
                          android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:id="@+id/colombiaText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="@style/dz1"/>
        <LinearLayout android:id="@+id/colombia"
                      android:layout_width="300dp"
                      android:layout_height="200dp"
                      android:background="@color/yellowColombiaFlag"
                      android:layout_marginBottom="20dp"
                      android:orientation="vertical"
                      android:gravity="bottom"
                      android:weightSum="4">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:background="@color/blueColombiaFlag"
                          android:layout_weight="1"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:background="@color/redColombiaFlag"
                          android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:id="@+id/madagascarText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="@style/dz1"/>
        <LinearLayout android:id="@+id/madagascar"
                      android:layout_width="300dp"
                      android:layout_height="200dp"
                      android:background="@android:color/white"
                      android:layout_marginBottom="20dp"
                      android:orientation="horizontal"
                      android:gravity="end"
                      android:weightSum="3">
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
                          android:background="@color/greenMadagascarFlag"
                          android:layout_weight="2"
                          android:weightSum="2">
                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="0dp"
                             android:background="@color/redMadagascarFlag"
                             android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:id="@+id/thailandText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="@style/dz1"/>
        <LinearLayout android:id="@+id/thailand"
                      android:layout_width="300dp"
                      android:layout_height="200dp"
                      android:background="@color/redThailandFlag"
                      android:layout_marginBottom="20dp"
                      android:orientation="horizontal"
                      android:gravity="center"
                      android:weightSum="6">
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="135dp"
                         android:background="@android:color/white">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="70dp"
                              android:background="@color/blueThailandFlag"
                              android:orientation="horizontal"
                              android:layout_gravity="center">

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <TextView android:id="@+id/denmarkText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="@style/dz1"/>
        <RelativeLayout android:id="@+id/denmark"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:background="@android:color/white"
                        android:layout_marginBottom="20dp">
            <FrameLayout android:layout_width="95dp"
                         android:layout_height="83dp"
                         android:layout_alignParentTop="true"
                         android:layout_alignParentLeft="true"
                         android:background="@color/redDenmarkFlag"/>
            <FrameLayout android:layout_width="168dp"
                         android:layout_height="83dp"
                         android:layout_alignParentTop="true"
                         android:layout_alignParentRight="true"
                         android:background="@color/redDenmarkFlag"/>
            <FrameLayout android:layout_width="95dp"
                         android:layout_height="83dp"
                         android:layout_alignParentBottom="true"
                         android:layout_alignParentLeft="true"
                         android:background="@color/redDenmarkFlag"/>
            <FrameLayout android:layout_width="168dp"
                         android:layout_height="83dp"
                         android:layout_alignParentBottom="true"
                         android:layout_alignParentRight="true"
                         android:background="@color/redDenmarkFlag"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>