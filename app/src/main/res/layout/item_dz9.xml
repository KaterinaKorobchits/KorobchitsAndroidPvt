<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainActivityBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dz9FleetType"
        style="@style/Dz9Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monda_bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp">

        <TextView
            android:id="@+id/dz9TextView1"
            style="@style/Dz9Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/dz9Lat"
            app:layout_constraintRight_toLeftOf="@id/dz9CoordLat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dz9CoordLat"
            style="@style/Dz9Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/dz9TextView1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dz9TextView2"
            style="@style/Dz9Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dz9Lng"

            app:layout_constraintRight_toLeftOf="@id/dz9CoordLng"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dz9TextView1" />

        <TextView
            android:id="@+id/dz9CoordLng"
            style="@style/Dz9Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/dz9TextView2"
            app:layout_constraintTop_toBottomOf="@id/dz9CoordLat" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>